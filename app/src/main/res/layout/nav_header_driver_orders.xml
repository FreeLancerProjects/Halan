<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"

    >

    <it.beppi.tristatetogglebutton_library.TriStateToggleButton
        android:id="@+id/toggleBtn"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="left"
        app:tbIsMidSelectable="false"
        app:tbAnimate="true"
        app:tbOffBorderColor="@color/offGreen"
        app:tbDefaultStatus="off"
        app:tbOnColor="@color/black"
        app:tbOffColor="@color/offGreen"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:src="@drawable/user_profile"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/profile_page"
            android:textStyle="bold"
            android:textSize="15sp"
            />

    </LinearLayout>


</LinearLayout>
