<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semicolon.Halan.Activities.Activity_PhoneCodeValidation"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@drawable/screen_gradient"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="left"
            android:src="@drawable/green_arrow"
            android:padding="10dp"
            android:clickable="true"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:contentPadding="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/code_txt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/client_login_container"
                    android:hint="@string/enter_code"
                    android:textColor="@color/gray3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColorHint="@color/gray3"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    />
                <Button
                    android:id="@+id/confirm"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:background="@drawable/btn_code_validation"
                    android:text="@string/confirm"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</ScrollView>
