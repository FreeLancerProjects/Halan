<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semicolon.Halan.Activities.Activity_Driver_Register"
    android:orientation="vertical"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/white_back"
                android:padding="12dp"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@drawable/screen_gradient"


    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/client_login_tv"
            android:layout_marginBottom="10dp"
            android:text="@string/txt_register"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"



            />



            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/city"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray2"
                android:textColor="@color/gray3"
                android:textSize="12sp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:background="@drawable/client_login_container"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <EditText
                android:id="@+id/identity"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/identity"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray2"
                android:textColor="@color/gray3"
                android:textSize="12sp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:background="@drawable/client_login_container"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                />

            <EditText
                android:id="@+id/vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/vehicle"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gray2"
                android:textColor="@color/gray3"
                android:textSize="12sp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:background="@drawable/client_login_container"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                />

        <EditText
            android:id="@+id/car_color"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/car_color"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray2"
            android:textColor="@color/gray3"
            android:textSize="12sp"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textStyle="bold"
            android:background="@drawable/client_login_container"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/green_btn_bg"
                android:textColor="@color/white"
                android:text="@string/next"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

    </LinearLayout>
    </android.support.v7.widget.CardView>


    </RelativeLayout>
    </ScrollView>
</LinearLayout>