<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.semicolon.Halan.Activities.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.HomeActivity"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/order_container"
        />

    <LinearLayout
        android:id="@+id/order_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <!--select location-->

        <LinearLayout
            android:id="@+id/locContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/gray3"
                android:textColor="@color/white"
                android:text="تحديد موقع الاستلام"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/white_map_icon"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تفاصيل الطلب"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:background="@color/white"

                />
            <EditText
                android:id="@+id/txt_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/details_et"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:maxLines="2"
                android:textColor="@color/gray2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:hint="أضف تفاصيل الطلب هنا..."
                android:textColorHint="@color/gray2"

                />
            <Button
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="التالي"
                android:textSize="16sp"
                />
        </LinearLayout>


        <!--send order-->


        <FrameLayout
            android:id="@+id/costContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/txt_order_from"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/gray2"
                    android:gravity="center_vertical"
                    android:paddingRight="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"


                    />
                <TextView
                    android:id="@+id/txt_order_to"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/gray3"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:paddingRight="40dp"
                    android:textSize="12sp"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingRight="20dp"
                        android:text="تكلفه الطريق"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"

                        />
                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text="50 ريال"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_alignParentLeft="true"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray2"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/cost"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />
                </RelativeLayout>

                <Button
                    android:id="@+id/sendBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="إرسال الطلب"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/point"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="2dp"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/white_map_icon2"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>




    </LinearLayout>

</RelativeLayout>
