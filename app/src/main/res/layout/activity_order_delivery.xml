<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semicolon.Halan.Activities.OrderDeliveryActivity"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/deliveryBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/delivery_btn_bg"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:text="@string/delv_comp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textSize="11sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="@string/deliv_order"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.HomeActivity"
        android:layout_above="@+id/container"
        android:layout_below="@+id/appBar"
        />
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/container"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/notf"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:background="@drawable/fab_bg"
            android:clickable="true"
            android:src="@drawable/not_icon"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <FrameLayout
            android:id="@+id/costContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/txt_order_from"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/gray2"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingLeft="10dp"
                android:textSize="12sp"


                />
            <TextView
                android:id="@+id/txt_order_to"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/gray3"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:paddingRight="40dp"
                android:textSize="12sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingRight="20dp"
                    android:text="@string/cost"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:gravity="right"

                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="45dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="@string/cancel"
                    android:textSize="16sp"
                    />
                <Button
                    android:id="@+id/chatBtn"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="45dp"
                    android:background="@color/gray2"
                    android:textColor="@color/white"
                    android:text="@string/chat"
                    android:textSize="16sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/point"
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_map_icon2"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
