<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semicolon.Halan.Activities.DriverOrderDetailsActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.DriverOrderDetailsActivity"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/order_container"
        />
    <LinearLayout
        android:id="@+id/order_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

    <FrameLayout
        android:id="@+id/driver_orderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/driver_txt_order_from"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/gray2"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingLeft="10dp"
                android:textSize="12sp"


                />
            <TextView
                android:id="@+id/driver_txt_order_to"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/gray3"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:paddingRight="40dp"
                android:textSize="12sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingRight="20dp"
                    android:text="تفاصيل الطلب"
                    android:textStyle="bold"
                    android:textSize="12sp"

                    />
                <TextView
                    android:id="@+id/driver_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray2"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:text="من مطعم ماكدونالدز \n 2ساندوتش فراخ زنجر \2 كولا"
                    android:layout_marginBottom="5dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingTop="2dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".9"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="رقم جوال العميل"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/driver_client_phone"
                        android:inputType="phone"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray2"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="+201017357658"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".9"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="تكلفة الرحلة"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"

                        />
                    <TextView
                        android:id="@+id/driver_cost"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="50 ريال"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:textSize="12sp"


                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/accept"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:text="قبول"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/refuse"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:background="@color/gray2"
                    android:textColor="@color/white"
                    android:text="رفض"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/point"
                    android:layout_gravity="center"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_map_icon2"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    </LinearLayout>

</RelativeLayout>
